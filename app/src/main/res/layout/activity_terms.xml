<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#bfb5b5">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Accept"
        android:id="@+id/accept"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Reject"
        android:id="@+id/reject"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp"
        android:layout_alignTop="@id/accept"
        android:layout_toRightOf="@+id/accept"
        android:layout_toEndOf="@+id/accept" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="The NJIT Buddy application is intended to be used only by people in the NJIT community. This is intended to be a supportive community where people can post pseudonymous. No information will be shared with a third party. Information collected in this research will only be used towards research and development for future purposes. The Social Interaction Lab reserves the right for any modifying or future change for the terms of use."
        android:id="@+id/tv1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:layout_above="@+id/accept"
        android:textColor="#060606"
        android:background="#bfb5b5"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:singleLine="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/tv1"
        android:layout_alignLeft="@+id/accept"
        android:layout_alignStart="@+id/accept" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:text="TERMS AND CONDITIONS"
        android:layout_below="@+id/editText"
        android:textSize="20dp" />

</RelativeLayout>